<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_line_area"
    android:padding="@dimen/dimens_30"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lv_empty_iv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_10"
        android:src="@mipmap/ic_empty_img" />

    <TextView
        android:id="@+id/lv_empty_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无数据"
        android:textColor="@color/gray_1"
        android:textSize="@dimen/dimens_17" />

</LinearLayout>