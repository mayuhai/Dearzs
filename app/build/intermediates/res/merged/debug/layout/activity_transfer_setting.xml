    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6"
            android:background="@color/gray_line_area" />

        <RelativeLayout
            android:id="@+id/ly_visit_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_48"
            android:paddingLeft="@dimen/dimens_12"
            android:paddingRight="@dimen/dimens_12">

            <TextView
                android:id="@+id/tv_visit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="开始转诊"
                android:textColor="@color/black_2"
                android:textSize="@dimen/font_size18" />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/switch_radio_selector"
                android:button="@null"
                android:textColor="@color/red_light" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimens_20"
                android:layout_toLeftOf="@+id/checkbox"
                android:text="转诊中"
                android:textSize="@dimen/font_size18" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6"
            android:background="@color/gray_line_area" />

        <RelativeLayout
            android:id="@+id/ly_visit_cost"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_48"
            android:paddingLeft="@dimen/dimens_12"
            android:paddingRight="@dimen/dimens_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="转诊费用"
                android:textColor="@color/black_2"
                android:textSize="@dimen/font_size18" />


            <EditText
                android:id="@+id/edt_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dimens_10"
                android:layout_marginRight="@dimen/dimens_10"
                android:background="@android:color/transparent"
                android:hint="请输入会诊费用"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimens_10"
                android:text="元/次"
                android:textSize="@dimen/font_size18" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6"
            android:background="@color/gray_line_area" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginLeft="@dimen/dimens_12"
        android:layout_marginRight="@dimen/dimens_12"
        android:background="@drawable/rectange_green_bg_selector"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16"
        android:visibility="gone" />

</LinearLayout>
