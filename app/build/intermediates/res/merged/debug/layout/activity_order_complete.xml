<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_line_area"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_0"
            android:background="@color/content_bg"
            android:layout_weight="2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@color/content_bg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_pay_complete"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10"
                android:layout_marginBottom="@dimen/dimens_4"
                android:textSize="@dimen/dimens_18"
                android:textColor="@color/green"
                android:text="预约成功" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dimens_12"
                android:text="您已预约成功，请按时前往会诊" />


        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_0"
            android:background="@color/content_bg"
            android:layout_weight="2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6"
            android:background="@color/gray_line_area" />consult_chat_expert_reply

        <LinearLayout
            android:id="@+id/expert_details_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_12">

            <com.dearzs.app.widget.CircleImageView
                android:id="@+id/order_complete_expert_photo"
                android:layout_width="@dimen/dimens_72"
                android:layout_height="@dimen/dimens_72" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimens_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/order_complete_expert_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/dimens_16" />

                    <TextView
                        android:id="@+id/order_complete_expert_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimens_6"
                        android:layout_marginRight="@dimen/dimens_6"
                        android:text="职称"
                        android:textColor="@color/black_2"
                        android:textSize="@dimen/dimens_14" />

                    <ImageView
                        android:id="@+id/order_complete_can_zhuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimens_4"
                        android:visibility="gone"
                        android:layout_toRightOf="@id/order_complete_expert_name"
                        android:src="@mipmap/ic_zhuan_tag" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimens_8"
                    android:paddingTop="@dimen/dimens_6">

                    <TextView
                        android:id="@+id/order_complete_expert_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="北京军区总医院"
                        android:textColor="@color/gray_8" />

                    <View
                        android:layout_width="@dimen/dimens_1"
                        android:layout_height="@dimen/dimens_16"
                        android:layout_marginLeft="@dimen/dimens_6"
                        android:layout_marginRight="@dimen/dimens_6"
                        android:background="@color/gray_8" />

                    <TextView
                        android:id="@+id/order_complete_expert_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="神经内科"
                        android:textColor="@color/gray_8" />
                </LinearLayout>

                <TextView
                    android:id="@+id/order_complete_expert_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="[预约时间：2016-06-21 上午]"
                    android:textColor="@color/orange_txt"
                    android:textSize="@dimen/dimens_16" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6"
            android:background="@color/gray_line_area" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_56"
            android:layout_alignParentBottom="true"
            android:background="@color/content_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimens_12"
            android:paddingRight="@dimen/dimens_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dimens_6"
                android:text="共支付："
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dimens_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimens_5"
                android:text="￥"
                android:textColor="@color/red_light"
                android:textSize="@dimen/dimens_24" />

            <TextView
                android:id="@+id/order_complete_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimens_5"
                android:text="600"
                android:textColor="@color/red_light"
                android:textSize="@dimen/dimens_24" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_44"
            android:layout_marginTop="@dimen/dimens_12"
            android:layout_marginLeft="@dimen/dimens_12"
            android:layout_marginRight="@dimen/dimens_12"
            android:id="@+id/order_complete_bt"
            android:background="@drawable/rounded_rectangle_green_bg"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_16"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0"
            android:background="@color/gray_line_area"
            android:layout_weight="3" />

    </LinearLayout>
</RelativeLayout>

