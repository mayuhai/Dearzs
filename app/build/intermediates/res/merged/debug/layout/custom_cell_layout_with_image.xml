<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_52"
    android:background="@drawable/common_white_view_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/custom_cell_layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.dearzs.app.widget.CircleImageView
                android:layout_width="@dimen/dimens_28"
                android:layout_height="@dimen/dimens_28"
                android:id="@+id/custom_cell_iv_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/un_icon"/>

            <TextView
                android:id="@+id/custom_cell_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimens_12"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/custom_cell_iv_icon"
                android:text="标题"
                android:textColor="@color/black_2"
                android:textSize="@dimen/dimens_16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom_cell_tv_title_desc"
                    android:layout_width="@dimen/dimens_200"
                    android:layout_height="wrap_content"
                    android:text="内容"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/gray_1"
                    android:textSize="@dimen/dimens_16" />

                <ImageView
                    android:id="@+id/custom_cell_iv_title_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimens_10"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0_5"
        android:paddingLeft="@dimen/dimens_56">
        <View
            android:id="@+id/custom_cell_tv_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:background="@color/line" />
    </LinearLayout>

</LinearLayout>