<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_cell_radio_tv_top_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_49"
            android:layout_marginRight="@dimen/dimens_12"
            android:paddingLeft="@dimen/dimens_12">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_cell_iv_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimens_8"
                android:src="@mipmap/un_icon"/>

            <TextView
                android:id="@+id/custom_cell_radio__tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/custom_cell_iv_icon"
                android:layout_centerVertical="true"
                android:text="标题"
                android:textColor="@color/black_1"
                android:textSize="@dimen/dimens_17" />

            <TextView
                android:id="@+id/custom_cell_radio_tv_title_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="描述"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_17" />

            <CheckBox
                android:id="@+id/custom_cell_radio_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/switch_radio_selector"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/custom_cell_radio_tv_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:background="@color/line" />
    </LinearLayout>

</LinearLayout>