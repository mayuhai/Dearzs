<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/content_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0"
        android:layout_weight="2"/>

        <ImageView
            android:id="@+id/start_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/start_logo" />

        <TextView
            android:id="@+id/start_tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_8"
            android:text="@string/app_name"
            android:textColor="@color/black_2"
            android:textSize="@dimen/dimens_22" />

        <TextView
            android:id="@+id/start_tv_start_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_tv_start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_8"
            android:text="@string/start_tip"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/dimens_14" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0"
        android:layout_weight="3"/>

</LinearLayout>