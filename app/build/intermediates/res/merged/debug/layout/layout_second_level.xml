<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/dimens_48"
    android:paddingLeft="@dimen/dimens_12"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_good_at_close_small"
         />

    <TextView
        android:layout_marginRight="10dp"
        android:textSize="@dimen/dimens_14"
        android:layout_marginLeft="12dp"
        android:text="ashduashduash"
        android:textColor="@color/black_2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/arrow_icon"
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <CheckBox
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/node_selector"
        android:layout_marginRight="@dimen/dimens_12"
        android:button="@drawable/checkbox_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0_5"
        android:background="@color/gray_line"
        android:layout_marginLeft="@dimen/dimens_24"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
