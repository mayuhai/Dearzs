<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:divideStyle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_line_area">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_6"
        android:gravity="center_horizontal"
        android:background="@color/content_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_persional_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_16" />

            <View
                android:layout_width="@dimen/dimens_0"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.dearzs.app.widget.CircleImageView
                android:id="@+id/iv_persional_photo"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="@dimen/dimens_50"
                android:layout_marginRight="@dimen/dimens_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>

        <com.dearzs.app.widget.CustomCellView
            android:id="@+id/cell_persional_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            divideStyle:cDescTextColor="@color/black_1"
            divideStyle:cShowArror="true"
            divideStyle:cShowIcon="false"
            divideStyle:cShowLine="false"
            divideStyle:cShowTopLine="true"
            divideStyle:cTitle="昵称"
            divideStyle:cTitleTextColor="@color/black" />

        <com.dearzs.app.widget.CustomCellView
            android:id="@+id/cell_persional_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            divideStyle:cDesc=""
            divideStyle:cDescTextColor="@color/black_1"
            divideStyle:cShowArror="true"
            divideStyle:cShowIcon="false"
            divideStyle:cShowLine="false"
            divideStyle:cShowTopLine="true"
            divideStyle:cTitle="性别"
            divideStyle:cTitleTextColor="@color/black" />

        <com.dearzs.app.widget.CustomCellView
            android:id="@+id/cell_persional_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            divideStyle:cDesc=""
            divideStyle:cDescTextColor="@color/black_1"
            divideStyle:cShowArror="false"
            divideStyle:cShowIcon="false"
            divideStyle:cShowLine="false"
            divideStyle:cShowTopLine="true"
            divideStyle:cTitle="手机号"
            divideStyle:cTitleTextColor="@color/black" />

        <com.dearzs.app.widget.CustomCellView
            android:id="@+id/cell_persional_card_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            divideStyle:cDesc=""
            divideStyle:cDescTextColor="@color/black_1"
            divideStyle:cShowArror="false"
            divideStyle:cShowIcon="false"
            divideStyle:cShowLine="false"
            divideStyle:cShowTopLine="true"
            divideStyle:cTitle="身份证号"
            divideStyle:cTitleTextColor="@color/black" />

        <com.dearzs.app.widget.CustomCellView
            android:id="@+id/cell_persional_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            divideStyle:cDesc=""
            divideStyle:cDescTextColor="@color/black_1"
            divideStyle:cShowArror="true"
            divideStyle:cShowIcon="false"
            divideStyle:cShowLine="false"
            divideStyle:cShowTopLine="true"
            divideStyle:cTitle="年龄"
            divideStyle:cTitleTextColor="@color/black" />

        <com.dearzs.app.widget.CustomCellView
            android:id="@+id/cell_persional_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            divideStyle:cDesc=""
            divideStyle:cDescTextColor="@color/black_1"
            divideStyle:cShowArror="true"
            divideStyle:cShowIcon="false"
            divideStyle:cShowLine="false"
            divideStyle:cShowTopLine="true"
            divideStyle:cTitle="居住地址"
            divideStyle:cTitleTextColor="@color/black" />

        <LinearLayout
            android:id="@+id/ly_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_medical_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="医龄"
                divideStyle:cTitleTextColor="@color/black" />

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="所属医院"
                divideStyle:cTitleTextColor="@color/black" />

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="科室"
                divideStyle:cTitleTextColor="@color/black" />

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_department_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="科室职务"
                divideStyle:cTitleTextColor="@color/black" />

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="职称"
                divideStyle:cTitleTextColor="@color/black" />

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="个人简介"
                divideStyle:cTitleTextColor="@color/black" />

            <com.dearzs.app.widget.CustomCellView
                android:id="@+id/cell_persional_intro_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                divideStyle:cDesc=""
                divideStyle:cDescTextColor="@color/black_1"
                divideStyle:cShowArror="true"
                divideStyle:cShowIcon="false"
                divideStyle:cShowLine="false"
                divideStyle:cShowTopLine="true"
                divideStyle:cTitle="擅长疾病"
                divideStyle:cTitleTextColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_5"
                android:background="@color/gray_line" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

