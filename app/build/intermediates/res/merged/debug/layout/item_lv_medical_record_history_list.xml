<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/medical_record_history_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_6"
        android:background="@color/gray_line_area"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_12"
        >

        <com.dearzs.app.widget.CircleImageView
            android:id="@+id/medical_record_history_doctor_photo"
            android:layout_width="@dimen/dimens_48"
            android:layout_height="@dimen/dimens_48" />

        <LinearLayout
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimens_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/medical_record_history_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/dimens_16" />

                <TextView
                    android:id="@+id/medical_record_history_doctor_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_6"
                    android:layout_marginRight="@dimen/dimens_6"
                    android:text="职称"
                    android:textColor="@color/black_2"
                    android:textSize="@dimen/dimens_14" />

                <ImageView
                    android:id="@+id/medical_record_history_can_zhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimens_4"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/order_confirm_expert_name"
                    android:src="@mipmap/ic_zhuan_tag" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimens_6">

                <TextView
                    android:id="@+id/medical_record_history_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="2015-05-13"
                    android:textColor="@color/gray_8" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_right"/>
    </LinearLayout>
</LinearLayout>
