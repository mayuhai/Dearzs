<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_52"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/base_title_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_bg">

        <ImageView
            android:id="@+id/base_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dip"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_title_back"
            android:visibility="gone" />

        <EditText
            android:id="@+id/base_et_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_12"
            android:layout_marginRight="@dimen/dimens_3"
            android:paddingLeft="@dimen/dimens_8"
            android:drawablePadding="@dimen/dimens_8"
            android:drawableLeft="@mipmap/ic_title_search"
            android:singleLine="true"
            android:textSize="@dimen/dimens_14"
            android:lines="1"
            android:layout_toLeftOf="@+id/base_right_layout"
            android:background="@drawable/rectangle_green_line_white_bg"
            android:hint="找医生，医院，科室，疾病"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/base_layout_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dip">

            <TextView
                android:id="@+id/base_tv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="170dip"
                android:singleLine="true"
                android:text="标题"
                android:textColor="#0da052"
                android:textSize="@dimen/dimens_20"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/base_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dimens_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/base_tv_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimens_10"
                android:gravity="center"
                android:paddingLeft="@dimen/dimens_5"
                android:paddingRight="@dimen/dimens_5"
                android:text="取消"
                android:textColor="@color/green"
                android:textSize="@dimen/dimens_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/base_iv_right_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_collection_normal"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/base_iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dip"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_collection_normal"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>