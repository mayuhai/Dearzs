<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dimens_40">

    <TextView
        android:id="@+id/item_tab_layout_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/gray_1"
        android:textSize="@dimen/dimens_16" />

    <View
        android:id="@+id/item_tab_layout_v_flag"
        android:layout_width="@dimen/dimens_5"
        android:layout_height="@dimen/dimens_5"
        android:layout_toRightOf="@id/item_tab_layout_tv_title"
        android:layout_marginTop="@dimen/dimens_10"
        android:visibility="gone"/>
</RelativeLayout>
