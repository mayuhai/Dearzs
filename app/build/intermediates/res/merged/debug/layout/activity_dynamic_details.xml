<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_6"
            android:background="@color/gray_line_area" />

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/dynamic_details_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg"
            android:divider="@color/line"
            android:listSelector="@drawable/common_white_view_selector"
            android:paddingBottom="@dimen/dimens_40" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_48"
            android:background="@color/content_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin_community_dynamic_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_48"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_community_dynamic_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/ic_comment"
                    android:drawablePadding="@dimen/dimens_4"
                    android:gravity="right|center_vertical"
                    android:text="去评论"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/dimens_12" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dimens_0_5"
                android:layout_height="@dimen/dimens_32"
                android:background="@color/gray_line" />

            <LinearLayout
                android:id="@+id/lin_community_dynamic_praise_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_48"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_community_dynamic_praise_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/ic_zan_normal"
                    android:drawablePadding="@dimen/dimens_4"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/dimens_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
