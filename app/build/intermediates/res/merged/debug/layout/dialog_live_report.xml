<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:textSize="@dimen/dimens_20"
        android:textColor="@color/black"
        android:text="请选择您的举报原因"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_dirty"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="垃圾营销"
        android:textSize="@dimen/dimens_20"
        android:textColor="#d63f41"
        android:gravity="center"
        android:background="@mipmap/button_pressed"
        android:layout_width="205dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_false"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="不实信息"
        android:textSize="@dimen/dimens_18"
        android:textColor="#d63f41"
        android:gravity="center"
        android:background="@mipmap/button_pressed"
        android:layout_width="205dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_virus"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="有害信息"
        android:textSize="@dimen/dimens_18"
        android:textColor="#d63f41"
        android:gravity="center"
        android:background="@mipmap/button_pressed"
        android:layout_width="205dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_illegal"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="违法信息"
        android:textSize="@dimen/dimens_18"
        android:textColor="#d63f41"
        android:gravity="center"
        android:background="@mipmap/button_pressed"
        android:layout_width="205dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_yellow"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="淫秽信息"
        android:textSize="@dimen/dimens_18"
        android:textColor="#d63f41"
        android:gravity="center"
        android:background="@mipmap/button_pressed"
        android:layout_width="205dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/btn_cancel"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="取消"
        android:textSize="@dimen/dimens_18"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@mipmap/button2_default"
        android:layout_width="205dp"
        android:layout_height="wrap_content" />
</LinearLayout>
