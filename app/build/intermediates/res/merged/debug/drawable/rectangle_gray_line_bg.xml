<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#dedede" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:left="0.5dp"
        android:top="0.5dp"
        android:right="0.5dp"
        android:bottom="0.5dp">
        <shape>
            <solid android:color="#ffffff" />
            <corners android:radius="0dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>