<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_green_line_white_bg">

    <ImageView
        android:id="@+id/upload_cell_iv_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_img_loading"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/upload_cell_iv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimens_8"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_car_voucher_close"
        android:visibility="visible" />

    <TextView
        android:id="@+id/upload_cell_tv_tip"
        android:layout_width="@dimen/dimens_72"
        android:layout_height="@dimen/dimens_72"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/dimens_5"
        android:drawableTop="@mipmap/ic_car_un_upload"
        android:gravity="center"
        android:text="..."
        android:textColor="@color/gray_1"
        android:textSize="@dimen/dimens_16" />

    <TextView
        android:id="@+id/upload_cell_tv_fail_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/car_upload_fail_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dimens_6"
        android:text="上传失败"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16" />
</RelativeLayout>