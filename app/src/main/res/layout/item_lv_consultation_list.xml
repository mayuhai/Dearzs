<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/medical_consultation_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_12">

        <ImageView
            android:id="@+id/iv_item_consultation_icon"
            android:layout_width="@dimen/dimens_90"
            android:layout_height="@dimen/dimens_70" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_70"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimens_8">

            <TextView
                android:id="@+id/tv_consultation_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/gray_dack"
                android:textSize="@dimen/dimens_14" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_7"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_consultation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/dimens_12" />

                <View
                    android:layout_width="@dimen/dimens_1"
                    android:layout_height="@dimen/dimens_14"
                    android:layout_marginLeft="@dimen/dimens_4"
                    android:layout_marginRight="@dimen/dimens_4"
                    android:background="@color/gray_light" />

                <TextView
                    android:id="@+id/tv_consultation_time"
                    android:layout_width="@dimen/dimens_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/dimens_12" />

                <TextView
                    android:id="@+id/tv_consultation_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_zan_normal"
                    android:drawablePadding="@dimen/dimens_4"
                    android:gravity="right|center_vertical"
                    android:minWidth="@dimen/dimens_44"
                    android:paddingLeft="@dimen/dimens_12"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/dimens_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0_5"
        android:background="@color/line"/>
</LinearLayout>
