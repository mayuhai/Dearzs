                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dimens_12"
                    android:paddingLeft="@dimen/dimens_26"
                    android:paddingRight="@dimen/dimens_26"
