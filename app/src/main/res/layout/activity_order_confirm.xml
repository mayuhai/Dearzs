                        android:layout_width="@dimen/dimens_0"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_weight="1"
                        android:background="@drawable/rectange_green_bg_selector"
                        android:text="查找患者库"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimens_14" />

                    <Button
                        android:id="@+id/order_confirm_add_bt"
                        android:layout_width="@dimen/dimens_0"
                        android:layout_height="@dimen/dimens_40"
                        android:layout_marginLeft="@dimen/dimens_12"
                        android:layout_weight="1"
                        android:background="@drawable/rectange_orange_bg_selector"
                        android:text="添加患者"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimens_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/order_confirm_patient_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimens_12"
                    android:paddingLeft="@dimen/dimens_26"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimens_40"
                        android:background="@drawable/rounded_rectangle_green_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/order_confirm_patient_tab_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimens_12"
                            android:text="陈阿宝"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimens_14" />

                        <ImageView
                            android:id="@+id/order_confirm_patient_delete_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_close" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimens_16">

                        <LinearLayout
                            android:layout_width="@dimen/dimens_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="患者："
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dimens_16" />

                            <TextView
                                android:id="@+id/order_confirm_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="陈阿宝"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dimens_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="性别："
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dimens_16" />

                            <TextView
                                android:id="@+id/order_confirm_patient_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="男"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_16" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimens_12"
                        android:paddingTop="@dimen/dimens_12">

                        <LinearLayout
                            android:layout_width="@dimen/dimens_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="年龄："
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dimens_16" />

                            <TextView
                                android:id="@+id/order_confirm_patient_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="36岁"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dimens_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电话："
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dimens_16" />

                            <TextView
                                android:id="@+id/order_confirm_patient_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15264553789"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_16" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="证件号码："
                            android:textColor="@color/gray_9"
                            android:textSize="@dimen/dimens_16" />

                        <TextView
                            android:id="@+id/order_confirm_patient_card_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="102373198703214562"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/dimens_16" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_add_doctor_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimens_12"
                android:paddingLeft="@dimen/dimens_12"
                android:paddingRight="@dimen/dimens_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dimens_0"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dimens_44"
                        android:drawableLeft="@mipmap/ic_add_patient"
                        android:drawablePadding="@dimen/dimens_8"
                        android:gravity="center_vertical"
                        android:text="添加主治医生"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/dimens_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更换医生"
                        android:id="@+id/tv_add_doctor_change_doctor"
                        android:visibility="gone"
                        android:textSize="@dimen/dimens_14"
                        android:textColor="@color/green"
                        android:drawableRight="@mipmap/video_more"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_gray_help"
                        android:id="@+id/iv_add_doctor_help"
                        android:layout_marginLeft="@dimen/dimens_12"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/order_confirm_add_doctor_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimens_40"
                    android:background="@drawable/rectange_green_bg_selector"
                    android:text="选择主治医生"
                    android:paddingLeft="@dimen/dimens_24"
                    android:paddingRight="@dimen/dimens_24"
                    android:layout_marginLeft="@dimen/dimens_26"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_14" />

                <LinearLayout
                    android:id="@+id/expert_details_doctor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_12"
                    android:layout_marginRight="@dimen/dimens_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/dimens_12">

                    <com.dearzs.app.widget.CircleImageView
                        android:id="@+id/order_confirm_doctor_photo"
                        android:layout_width="@dimen/dimens_72"
                        android:layout_height="@dimen/dimens_72" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dimens_12">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/order_confirm_doctor_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_16" />

                            <TextView
                                android:id="@+id/order_confirm_doctor_job"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimens_6"
                                android:layout_marginRight="@dimen/dimens_6"
                                android:text="职称"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_14" />

                            <ImageView
                                android:id="@+id/order_confirm_doctor_can_zhuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dimens_4"
                                android:layout_toRightOf="@id/order_confirm_expert_name"
                                android:src="@mipmap/ic_zhuan_tag"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dimens_6">

                            <TextView
                                android:id="@+id/order_confirm_doctor_hospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/gray_8" />

                            <View
                                android:layout_width="@dimen/dimens_1"
                                android:layout_height="@dimen/dimens_16"
                                android:layout_marginLeft="@dimen/dimens_6"
                                android:layout_marginRight="@dimen/dimens_6"
                                android:background="@color/gray_8" />

                            <TextView
                                android:id="@+id/order_confirm_doctor_department"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/gray_8" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_6"
                android:background="@color/gray_line_area" />

            <LinearLayout
                android:id="@+id/order_confirm_intro_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimens_12"
                android:paddingLeft="@dimen/dimens_12"
                android:paddingRight="@dimen/dimens_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_44"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_phone"
                        android:drawablePadding="@dimen/dimens_8"
                        android:text="添加手机号(用来接收订单信息)"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/dimens_16" />
                </LinearLayout>

                <EditText
                    android:id="@+id/order_confirm_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_44"
                    android:layout_marginLeft="@dimen/dimens_26"
                    android:background="@drawable/rounded_rectangle_gray_line_white_bg"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/dimens_12"
                    android:textColor="@color/black_2"
                    android:textColorHint="@color/hint_txt_color"
                    android:textSize="@dimen/dimens_16" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_6"
                android:background="@color/gray_line_area" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimens_12"
                android:paddingLeft="@dimen/dimens_12"
                android:paddingRight="@dimen/dimens_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_44"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_remarks"
                        android:drawablePadding="@dimen/dimens_8"
                        android:text="添加备注或者特殊需求"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/dimens_16" />
                </LinearLayout>

                <EditText
                    android:id="@+id/order_confirm_remarks_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_44"
                    android:layout_marginLeft="@dimen/dimens_26"
                    android:background="@drawable/rounded_rectangle_gray_line_white_bg"
                    android:hint="请输入备注或者特殊需求"
                    android:paddingLeft="@dimen/dimens_12"
                    android:textColor="@color/black_2"
                    android:textColorHint="@color/hint_txt_color"
                    android:textSize="@dimen/dimens_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_6"
                android:background="@color/gray_line_area" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimens_44"
                    android:drawableLeft="@mipmap/ic_pay"
                    android:drawablePadding="@dimen/dimens_8"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimens_12"
                    android:text="选择支付方式"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/dimens_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_0_5"
                    android:background="@color/line" />


                <LinearLayout
                    android:id="@+id/order_payment_patient_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimens_26"
                    android:visibility="visible">


                    <LinearLayout
                        android:id="@+id/order_payment_alipay_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_54"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dimens_12">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_icon_alipay" />

                        <LinearLayout
                            android:layout_width="@dimen/dimens_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dimens_12">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝客户端支付"
                                android:textColor="@color/black_2"
                                android:textSize="@dimen/dimens_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="推荐已安装支付宝客户端的用户使用"
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/dimens_12" />
                        </LinearLayout>


                        <CheckBox
                            android:id="@+id/payment_alipay_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_radio_selector"
                            android:clickable="false"
                            android:textColor="@color/gray_9"
                            android:textSize="@dimen/dimens_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_0_5"
                        android:background="@color/line" />

                    <LinearLayout
                        android:id="@+id/order_payment_wechat_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_54"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/dimens_12">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_icon_wechat" />

                        <LinearLayout
                            android:layout_width="@dimen/dimens_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dimens_12">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
