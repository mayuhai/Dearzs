<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_line_area"
    android:fillViewport="true"
    android:orientation="vertical">

    <com.dearzs.app.widget.MScrollView
        android:id="@+id/expert_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_64"
        android:background="@color/content_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/expert_details_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dimens_12">

                <com.dearzs.app.widget.CircleImageView
                    android:id="@+id/order_confirm_expert_photo"
                    android:layout_width="@dimen/dimens_72"
                    android:layout_height="@dimen/dimens_72" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimens_12">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/order_confirm_expert_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/dimens_16" />

                        <TextView
                            android:id="@+id/order_confirm_expert_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimens_6"
                            android:layout_marginRight="@dimen/dimens_6"
                            android:text="职称"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/dimens_14" />

                        <ImageView
                            android:id="@+id/order_confirm_can_zhuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimens_4"
                            android:layout_toRightOf="@id/order_confirm_expert_name"
                            android:src="@mipmap/ic_zhuan_tag"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dimens_6">

                        <TextView
                            android:id="@+id/order_confirm_expert_hospital"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/gray_8" />

                        <View
                            android:layout_width="@dimen/dimens_1"
                            android:layout_height="@dimen/dimens_16"
                            android:layout_marginLeft="@dimen/dimens_6"
                            android:layout_marginRight="@dimen/dimens_6"
                            android:background="@color/gray_8" />

                        <TextView
                            android:id="@+id/order_confirm_expert_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/gray_8" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_6"
                android:background="@color/gray_line_area" />

            <RelativeLayout
                android:id="@+id/order_confirm_time_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimens_12"
                android:paddingRight="@dimen/dimens_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimens_44"
                    android:drawableLeft="@mipmap/ic_visit_data"
                    android:drawablePadding="@dimen/dimens_8"
                    android:gravity="center_vertical"
                    android:text="预约日期"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/dimens_16" />

                <TextView
                    android:id="@+id/order_confirm_expert_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/orange_txt"
                    android:textSize="@dimen/dimens_16" />

                <TextView
                    android:id="@+id/order_confirm_expert_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dimens_10"
                    android:layout_toRightOf="@+id/order_confirm_expert_date"
                    android:textColor="@color/orange_txt"
                    android:textSize="@dimen/dimens_16" />

                <ImageView
