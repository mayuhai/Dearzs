<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/content_bg"
    android:paddingBottom="@dimen/dimens_40"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_6"
        android:background="@color/gray_line_area"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_50"
        android:src="@mipmap/start_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:textSize="@dimen/dimens_18"
        android:id="@+id/version"
        android:text="第二诊室1.0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wallet_yue"
        android:layout_marginTop="@dimen/dimens_10"
        android:text="" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_0"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:id="@+id/wallet_helper"
        android:text="合康泰健康管理（北京）有限公司" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10"
        android:text="地址：北京市东城区灯市口大街国中商业大厦33号316室" />
</LinearLayout>

