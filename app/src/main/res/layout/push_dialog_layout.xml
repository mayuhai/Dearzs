<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_style"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/push_filename"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/text1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/text1"
            android:background="@null"
            android:text="ChanelName" />

        <!--<TextView-->
        <!--android:id="@+id/text2"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_below="@id/text1"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:gravity="center_vertical"-->
        <!--android:text="description"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="18sp" />-->

        <!--<EditText-->
        <!--android:id="@+id/push_info"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignBottom="@id/text2"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_toRightOf="@id/text2"-->
        <!--android:text="" />-->


        <RadioGroup
            android:id="@+id/push_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/push_filename"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/hls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@color/black"
                android:text="HLS" />

            <RadioButton
                android:id="@+id/rtmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="RTMP" />
        </RadioGroup>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:background="@drawable/dialog_style"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_record_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="cancel"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_record_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:text="push"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>