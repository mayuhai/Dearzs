<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_6"
        android:background="@color/gray_line_area" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp">

        <ImageView
            android:id="@+id/profile_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_12"
            android:src="@mipmap/ic_good_at_close_big" />

        <TextView
            android:id="@+id/node_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_8"
            android:layout_toRightOf="@id/profile_arrow"
            android:text="最外层"
            android:textColor="@color/black_2"
            android:textSize="@dimen/dimens_16" />

        <CheckBox
            android:id="@+id/profile_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/dimens_12"
            android:button="@drawable/checkbox_selector" />

        <View
            android:id="@+id/first_level_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimens_24"
            android:background="@color/gray_line"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
