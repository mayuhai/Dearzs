<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_44"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sort_by_count"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:textSize="@dimen/dimens_14"
                android:textColor="@color/gray_3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="预约最多" />

            <LinearLayout
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lin_sort_by_price"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sort_by_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimens_14"
                    android:textColor="@color/gray_3"
                    android:gravity="center"
                    android:text="按价格" />

                <ImageView
                    android:id="@+id/iv_sort_by_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_2"
                    android:src="@mipmap/ic_sort_normal" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dimens_0_5"
                android:layout_height="match_parent"
                android:background="@color/line"
                android:id="@+id/view_midele_line"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_sort_by_score"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:textSize="@dimen/dimens_14"
                android:textColor="@color/gray_3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评价最高" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_0_5"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_44"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/lin_selected_city"
                android:layout_width="@dimen/dimens_0"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimens_0_5"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/tv_selected_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimens_4"
                    android:textSize="@dimen/dimens_14"
                    android:textColor="@color/gray_3"
                    android:gravity="center"
                    android:text="全国" />

                <ImageView
                    android:id="@+id/iv_selected_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimens_4"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_screen_unselected" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_selected_hospital"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_4"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_selected_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/dimens_14"
                    android:textColor="@color/gray_3"
                    android:gravity="center"
                    android:text="全部医院" />

                <ImageView
                    android:id="@+id/iv_selected_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_screen_unselected" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dimens_0_5"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/lin_selected_department"
                android:layout_width="@dimen/dimens_0"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_4"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_selected_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/dimens_14"
                    android:textColor="@color/gray_3"
                    android:gravity="center"
                    android:text="全部科室" />

                <ImageView
                    android:id="@+id/iv_selected_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_screen_unselected" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_selected_time"
                android:layout_width="@dimen/dimens_0"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dimens_0_5"
                    android:layout_height="match_parent"
                    android:background="@color/line" />

                <TextView
                    android:id="@+id/tv_selected_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimens_4"
                    android:textSize="@dimen/dimens_14"
                    android:textColor="@color/gray_3"
                    android:gravity="center"
                    android:text="全部时间" />

                <ImageView
                    android:id="@+id/iv_selected_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimens_4"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/ic_screen_unselected" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_6"
        android:background="@color/gray_line_area" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/mine_customer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/dimens_0"
        android:listSelector="@drawable/common_white_view_selector" />
</LinearLayout>
