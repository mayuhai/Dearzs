<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_80"
        android:src="@mipmap/ic_wallet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_18"
        android:textSize="16sp"
        android:textColor="@color/gray_7"
        android:text="我的余额" />

    <TextView
        android:id="@+id/wallet_yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_8"
        android:textSize="24sp"
        android:textColor="@color/red_light"
        android:text="18888" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/lin_wallet_help"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:visibility="gone"
            android:src="@mipmap/ic_help" />

        <TextView
            android:id="@+id/wallet_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:drawablePadding="@dimen/dimens_6"
            android:drawableLeft="@mipmap/ic_help"
            android:layout_marginLeft="@dimen/dimens_6"
            android:textColor="@color/blue_3"
            android:text="钱包助手" />
    </LinearLayout>
</LinearLayout>
