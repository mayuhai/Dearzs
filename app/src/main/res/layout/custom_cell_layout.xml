<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_view_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_cell_tv_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0_5"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/custom_cell_layout_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_52">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_cell_iv_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimens_8"
                android:src="@mipmap/un_icon"/>

            <TextView
                android:id="@+id/custom_cell_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/custom_cell_iv_icon"
                android:text="标题"
                android:textColor="@color/gray_1"
                android:textSize="@dimen/dimens_17" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom_cell_tv_title_desc"
                    android:layout_width="@dimen/dimens_200"
                    android:layout_height="wrap_content"
                    android:text="内容"
                    android:gravity="right"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_17" />

                <ImageView
                    android:id="@+id/custom_cell_iv_title_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimens_10"
                    android:src="@mipmap/ic_arrow_right"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/custom_cell_tv_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0_5"
        android:background="@color/line" />

</LinearLayout>