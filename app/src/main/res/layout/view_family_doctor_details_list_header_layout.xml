<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">
    <include layout="@layout/item_lv_family_doctor_list"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_6"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimens_12"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_48"
            android:gravity="center_vertical"
            android:text="请选择套餐"
            android:textSize="@dimen/dimens_16"
            android:textColor="@color/black_2"/>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_family_doctor_package">
        </com.jcodecraeer.xrecyclerview.XRecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_6"
        android:background="@color/line" />

    <com.dearzs.app.widget.MyTabBar
        android:id="@+id/family_doctor_detail_tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mytabbar_height">
    </com.dearzs.app.widget.MyTabBar>
</LinearLayout>