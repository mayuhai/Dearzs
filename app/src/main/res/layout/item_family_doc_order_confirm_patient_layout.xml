<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_confirm_patient_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimens_12"
    android:paddingLeft="@dimen/dimens_26"
    android:paddingTop="@dimen/dimens_6"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40"
            android:background="@drawable/rounded_rectangle_green_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_confirm_patient_tab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimens_12"
                android:text="陈阿宝"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_14" />

            <ImageView
                android:id="@+id/order_confirm_patient_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_close" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimens_16">

        <LinearLayout
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="患者："
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dimens_16" />

            <TextView
                android:id="@+id/order_confirm_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈阿宝"
                android:textColor="@color/black_2"
                android:textSize="@dimen/dimens_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dimens_16" />

            <TextView
                android:id="@+id/order_confirm_patient_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/black_2"
                android:textSize="@dimen/dimens_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimens_12"
        android:paddingTop="@dimen/dimens_12">

        <LinearLayout
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄："
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dimens_16" />

            <TextView
                android:id="@+id/order_confirm_patient_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36岁"
                android:textColor="@color/black_2"
                android:textSize="@dimen/dimens_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimens_0"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textColor="@color/gray_9"
                android:textSize="@dimen/dimens_16" />

            <TextView
                android:id="@+id/order_confirm_patient_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15264553789"
                android:textColor="@color/black_2"
                android:textSize="@dimen/dimens_16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件号码："
            android:textColor="@color/gray_9"
            android:textSize="@dimen/dimens_16" />

        <TextView
            android:id="@+id/order_confirm_patient_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="102373198703214562"
            android:textColor="@color/black_2"
            android:textSize="@dimen/dimens_16" />
    </LinearLayout>

</LinearLayout>